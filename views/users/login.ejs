<%- include('../layouts/header.ejs') %>

<div class="login-page">
  <div class="form">

    <h2 class="head">LOGIN</h2>

    <%

    if(typeof message !== 'undefined'){
      %>
        <h4 style="color:red"><%= message %></h4>
      <%
    }
    
    %>

    <form action="/login" method="post" class="login-form" onsubmit="return validateForm()">
      <div class="input-container">
        <!-- <input type="name" name="name" placeholder="Enter your username" required>
      </div>
      <div class="input-container"> -->
        <input type="email" name="email" placeholder="Enter your email" id="email">
        <p id="email-error" class="error-message"></p>
      </div>
      <div class="input-container">
        <input type="password" name="password" placeholder="Enter your password" id="password">
        <p id="password-error" class="error-message"></p>
      </div>
      <button type="submit" value="Login">Login</button>
      <p class="message">Not registered? <a href="/register">Register</a></p>
    </form>
  </div>
</div>

<a href="/verification">Verification</a>

<%- include('../layouts/footer.ejs') %>